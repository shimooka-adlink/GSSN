/********************************************************************/
/*!
 * \name	ctrl_I2C0_init
 * \brief	I2C Ch0 初期化 & 使用開始
 * \param	なし
 * \return  なし
 * \note	起動時に、呼ばれること
 */
/********************************************************************/
void ctrl_I2C0_init(void)
{
	// I2C Ch0 初期化
	i2c0_init();

	// I2C CH0 Driverを許可する
	i2c0_Enable();
}


/********************************************************************/
/*!
 * \name	ctrl_I2C0_end
 * \brief	I2C Ch0 の使用を中止する
 *          SCL, SDA端子をHi-Z stateとする
 * \param	なし
 * \return  なし
 * \note	必要時に、呼ばれること
 */
/********************************************************************/
void ctrl_I2C0_end(void)
{
	i2c0_Disable();
	i2c0_end();
}

/********************************************************************/
/*!
 * \name	ctrl_I2C0_re_start
 * \brief	I2C Ch0 の使用を再開する
 *          SCL, SDA端子を再設定する
 * \param	なし
 * \return  なし
 * \note	ctrl_I2C0_endの復活時に、呼ばれること
 */
/********************************************************************/
void ctrl_I2C0_re_start(void)
{
	i2c0_re_start();
	i2c0_Enable();
}


